<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/studentNameCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="Name: "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/studentMaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/studentNameCard"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Math Hours: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentSciences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/studentMaths"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:text="Science Hours: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentEnglishs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/studentSciences"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:text="English Hours: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentHistorys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/studentEnglishs"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:text="History Hours: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentTotals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/studentHistorys"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:text="Total Hours: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentMath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/studentNameCard"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/studentMaths"
            android:text="Math Hours: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentScience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/studentMath"
            android:layout_gravity="start|bottom"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/studentMaths"
            android:text="Science Hours: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/studentScience"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/studentMaths"
            android:text="English Hours: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/studentEnglish"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/studentMaths"
            android:text="History Hours: "
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/totalHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/studentHistory"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@id/studentMaths"
            android:text="Total Hours: "
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>







